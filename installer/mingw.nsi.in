!include jngl.nsh

XPStyle On
SetCompressor lzma

Name "JNGL for MinGW"

OutFile "JNGL @VERSION@ (MinGW).exe"

InstallDir "C:\msys64\mingw32"

Page directory
Page instfiles

LoadLanguageFile "${NSISDIR}\Contrib\Language files\English.nlf"
LoadLanguageFile "${NSISDIR}\Contrib\Language files\German.nlf"

Section ""

!insertmacro Header
SetOutPath $INSTDIR\lib
File ..\libjngl.a
File ..\lib\win\x86\Xinput.lib
SetOutPath $INSTDIR\bin
File ..\xinput1_3.dll

SectionEnd
