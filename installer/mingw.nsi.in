!include jngl.nsh

XPStyle On
SetCompressor lzma

Name "JNGL for MinGW"

OutFile "JNGL @VERSION@ (MinGW).exe"

InstallDir "C:\MinGW"

Function .onInit
IfFileExists "C:\MinGW" end
StrCpy $INSTDIR "$PROGRAMFILES\CodeBlocks\MinGW"
end:
FunctionEnd

Page directory
Page instfiles

LoadLanguageFile "${NSISDIR}\Contrib\Language files\English.nlf"
LoadLanguageFile "${NSISDIR}\Contrib\Language files\German.nlf"

Section ""

!insertmacro Header
SetOutPath $INSTDIR\lib
File ..\libjngl.a
File ..\lib\libfreetype.a
File ..\lib\libpng.a
File ..\lib\libz.a
File ..\lib\libjpeg.a
File ..\lib\libdl.a
File ..\lib\libglew32.dll.a
File ..\lib\libwebp.a
SetOutPath $INSTDIR\bin
File ..\vorbis.dll
File ..\vorbisfile.dll
File ..\ogg.dll
File ..\glew32.dll
File ..\xinput1_3.dll

SectionEnd
