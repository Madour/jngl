!include jngl.nsh

XPStyle On
SetCompressor lzma

Name "JNGL for Microsoft Visual C++"

OutFile "JNGL @VERSION@ (MS Visual C++).exe"

InstallDir "$PROGRAMFILES\Microsoft Visual Studio 11.0\VC"

Page directory
Page instfiles

LoadLanguageFile "${NSISDIR}\Contrib\Language files\English.nlf"
LoadLanguageFile "${NSISDIR}\Contrib\Language files\German.nlf"

Section ""

!insertmacro Header
SetOutPath $INSTDIR\lib
File ..\visualcpp\Release\jngl.lib
File /oname=jngl-d.lib ..\visualcpp\Debug\jngl.lib
File ..\lib\glew32s.lib
File ..\lib\alut.lib
File ..\lib\libogg_static.lib
File ..\lib\OpenAL32.lib
File ..\lib\freetype.lib
File ..\lib\libvorbis_static.lib
File ..\lib\vorbisfile.lib
File ..\lib\libpng.lib
File ..\lib\zlib.lib
File ..\lib\jpeg.lib
SetOutPath $INSTDIR\bin
File ..\jpeg62.dll

SectionEnd
